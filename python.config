name: "python"
description: "Python execution sandbox"

mode: ONCE
hostname: "python-sandbox"

# Mount points
mount {
  src: "/tmp"
  dst: "/tmp"
  is_bind: true
  rw: true
}

mount {
  src: "/usr/lib/python3"
  dst: "/usr/lib/python3"
  is_bind: true
  rw: false
}

mount {
  src: "/usr/local/lib/python3"
  dst: "/usr/local/lib/python3"
  is_bind: true
  rw: false
}

# User namespace
uidmap {
  inside_id: "1000"
  outside_id: "1000"
  count: 1
}

gidmap {
  inside_id: "1000"
  outside_id: "1000"
  count: 1
}
